select* from menus;
create table orderid(oid int auto_increment primary key,seats int ,date date);
describe orderid;
select * from orderid;
drop table orderid;
create table orderlists(orderitemid int auto_increment primary key,oid int,fooditem varchar(20),plates int,status varchar(10),date date,foreign key(oid)references orderid(oid));
describe orderlists;
select* from orderlists;
drop table orderlists;
create table managers(orderitemid int auto_increment primary key,oid int,fooditem varchar(20),plates int,status varchar(10),date date,foreign key(oid)references orderid(oid));

describe managers;
set foreign_key_checks=0;
truncate orderid ;
truncate orderlists;
set foreign_key_checks=1;
